{
  "name": "squad-server-info-discord-bot",
  "version": "3.1.0",
  "description": "Discord Bot to show squad server information",
  "author": "Mikerosoft25",
  "homepage": "https://github.com/WeLoveSquad/squad-server-info-discord-bot#readme",
  "url": "https://github.com/WeLoveSquad/squad-server-info-discord-bot/issues",
  "license": "MIT",
  "type": "module",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "test": "ts-mocha -n loader=ts-node/esm/transpile-only -p tsconfig.json ./test/**/*.test.ts --exit",
    "format": "prettier --write \"(src|test)/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "preversion": "npm run lint && npm run test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "serve": "node build/main.js",
    "start": "node --loader ts-node/esm/transpile-only src/main.ts",
    "dev": "nodemon --exec node --loader ts-node/esm/transpile-only src/main.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "settings/*"
    ]
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "typescript",
    "squad"
  ],
  "dependencies": {
    "@discordx/importer": "^1.3.3",
    "config": "^4.1.1",
    "discord.js": "^14.25.1",
    "discordx": "^11.13.3",
    "luxon": "^3.7.2",
    "reflect-metadata": "^0.2.2",
    "steam-server-query": "^1.1.3",
    "tsyringe": "^4.10.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chai": "^5.2.3",
    "@types/chai-as-promised": "^8.0.2",
    "@types/config": "^3.3.5",
    "@types/luxon": "^3.7.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.4",
    "chai": "^6.2.1",
    "chai-as-promised": "^8.0.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "mocha": "^11.7.5",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
